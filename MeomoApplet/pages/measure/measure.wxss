/* pages/measure/measure.wxss */
.measure-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.measure-background {
  position: absolute;
  width: 100%;
  height: 100%;
}

.measure-startorpause-btn {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 999;
}

.measure-image-e {
  position: absolute;
  top: 0;
  right: 0;
  text-align:center;
  width:50%;
  height: 100px;
  line-height: 100px;
}

.measure-image-people {
  position:absolute;
  width:100%;
  text-align:center;
}

.measure-bottom {
  position: absolute;
  width: 100%;
  bottom: 0rpx;
  display: flex;
  flex-direction: row; 
}

.measure-bottom-btn {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 80rpx;
}

.measure-animation {
  position: absolute;
  width: 100%;
  height: 100%;
  background:linear-gradient(red, blue,green);
  z-index: 9999;
}