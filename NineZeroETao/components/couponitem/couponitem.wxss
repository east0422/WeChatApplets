/* components/couponitem/couponitem.wxss */
@import "/app.wxss";

.couponitem-display {
  width: 100%;
  height: 300rpx;
  background-color: white;
  align-items: center;
  border-bottom: 4rpx dotted #D0D0D0;
}
.couponitem-img {
  width: 200rpx;
  height: 200rpx;
  background-size: contain;
  background-repeat: no-repeat;
  padding-left: 10rpx;
}
.couponitem-infos {
  height: 100%;
  font-size: 14px;
  color: black;
  padding-left: 20rpx;
  padding-right: 10rpx;
  justify-content: space-around;
}
.couponitem-freeship {
  color: white;
  background-color: #cc3333;
}
.couponitem-container {
  justify-content: space-around;
  align-items: center;
  font-size: 12px;
}
.couponitem-red {
  color: red;
}
.couponitem-purple {
  color: purple;
}
.couponitem-btn {
  font-size: 12px;
}