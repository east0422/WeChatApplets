/* pages/main/main.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #fafafa;
}

.content {
  flex: 1;
  width: 100%;
}

.mainBanner {
  display: block;
  height: 30px;
  background: #A83DFF;
  line-height: 30px;
  color: #fff;
  font-size: 10px;
  border: 1px solid #A83DFF;
}

.logoutBtn {
  float: right;
  margin-right: 10px;
}

.message {
  width: 99%;
  height: 200px;
  border: 1px #A83DFF solid;
}